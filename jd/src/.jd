base_workspace:
    compose_files:
        - operations/mmpug_docker/dockerfiles/docker-compose.yaml
        - operations/mmpug_docker/dockerfiles/mmpug/docker-compose.yaml
    env_files:
        - ~/.mmpug/mmpug_project_config/scenarios/.header.env
        - ~/.mmpug/mmpug_project_config/scenarios/${SCENARIO_SET}/${SCENARIO}.env
        - ~/.mmpug/mmpug_project_config/scenarios/${SCENARIO_SET}/.header.env
    build_env: "dbuild"
    build_type: "catkin"

workspaces:
    mmpug_common:
        build_root: src/mmpug_common
        service_name: mmpug_common
    mmpug_autonomy:
        build_root: src/mmpug_autonomy
        service_name: mmpug_autonomy
    mmpug_drivers:
        build_root: src/mmpug_drivers
        service_name: mmpug_drivers
    mmpug_estimation:
        build_root: src/mmpug_estimation
        service_name: mmpug_estimation
    mmpug_sim:
        build_root: src/mmpug_sim
        service_name: mmpug_sim